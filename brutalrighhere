#include <stdio.h>

int main()
{
	int a;
	int b;
	int soma;
	char comando;
	int multiplicacao;
	float divisao;
	int s;
	int m;
	int d;
	int l;
	int subtracao;
	printf("DIGITE UM COMANDO");
	scanf("%s", &comando);
	
	            do{
        printf("Escreve o comando direito ai bixo");
        scanf("%c", &comando);
    }
    while 
    (comando != 's' && comando != 'd');
    
	if (comando == 's'){
		printf("DIGITE UM NUMERO");
		scanf("%d", &a);
		printf("DIGITE UM NUMERO");
		scanf("%d", &b);
		soma = a+b;
		printf("Sua soma é: %d", soma);
	}


	else if	(comando == 'd'){

		printf("DIGITE UM NUMERO");
		scanf("%d", &a);
		printf("DIGITE UM NUMERO");
		scanf("%d", &b);
		divisao = a/b;
		printf("a sua divisao é: %f", divisao);

	}
	else if	(comando == 'm'){
		printf("DIGITE UM NUMERO");
		scanf("%d", &a);
		printf("DIGITE UM NUMERO");
		scanf("%d", &b);
		multiplicacao = a*b;
		printf("a sua multiplicacao é %d", multiplicacao);
	}
		else if	(comando == 'l'){
		printf("DIGITE UM NUMERO");
		scanf("%d", &a);
		printf("DIGITE UM NUMERO");
		scanf("%d", &b);
		subtracao = a-b;
		printf("a sua subtracao é %d", subtracao);
	}

	return 0;

    


}
